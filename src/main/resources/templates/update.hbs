{{#partial "content"}}

       <h1>Edit this Team!</h1>
       <form action="/teams/{{editTeam.id}}/update" method="post">
           <div class = "well">
           <label for="teamName" class = "about">Edit this team's name</label>
           <input id="teamName" name="teamName" type="text" value="{{editTeam.teamName}}">
           <label for="teamDescription" class = "about">Edit this team's description</label>
           <input id="teamDescription" name="teamDescription" type="text" value="{{editTeam.teamDescription}}">
           </div>
      <button type="submit" class="btn btn-default">Submit!</button>
      </form>

{{/partial}}


{{#partial "title"}}
    Create a new team
{{/partial}}
{{#partial "content"}}
    <h1>Add a new team</h1>
    <form action='/teams/new/success' method="post">
        <div class="form-group">
            <label for="teamName">Team Name</label>
            <input id="teamName" name="teamName" class="form-control" type="text">
        </div>
        <div class="form-group">
            <label for="teamDescription">Team Description</label>
            <input id="teamDescription" name="teamDescription" class="form-control" type="text">
        </div>
        <div class="form-group">
             <label for="teamMate1">Team Member 1</label>
             <input id="teamMate1" name="teamMate1" class="form-control" type="text">
        </div>
        <div class="form-group">
             <label for="teamMate2">Team Member 2</label>
             <input id="teamMate2" name="teamMate2" class="form-control" type="text">
        </div>
        <div class="form-group">
             <label for="teamMate3">Team Member 3</label>
             <input id="teamMate3" name="teamMate3" class="form-control" type="text">
        </div>

        <div class="form-group">
             <label for="teamMate4">Team Member 4</label>
             <input id="teamMate4" name="teamMate4" class="form-control" type="text">
        </div>

        <div class="form-group">
             <label for="teamMate5">Team Member 5</label>
             <input id="teamMate5" name="teamMate5" class="form-control" type="text">
        </div>
        <button type="submit" class="btn">Continue</button>
    </form>
{{/partial}}

{{> layout.hbs}}